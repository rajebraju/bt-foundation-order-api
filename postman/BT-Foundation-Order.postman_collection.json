{
  "info": {
    "name": "BT Foundation Order API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (Admin)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@email.com\",\n  \"password\": \"password\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "http://localhost:8000/api/v1/auth/login",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "v1", "auth", "login"]
            }
          }
        },
        {
          "name": "Login (Vendor)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"vendor@email.com\",\n  \"password\": \"password\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": "http://localhost:8000/api/v1/auth/login"
          }
        },
        {
          "name": "Login (Customer)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"customer@email.com\",\n  \"password\": \"password\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": "http://localhost:8000/api/v1/auth/login"
          }
        }
      ]
    },
    {
      "name": "Products (Public)",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": "http://localhost:8000/api/v1/products"
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/v1/products/search?q=laptop",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "v1", "products", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "laptop"
                }
              ]
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": "http://localhost:8000/api/v1/products/1"
          }
        }
      ]
    },
    {
      "name": "Products (Authenticated)",
      "item": [
        {
          "name": "Create Product (Vendor)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sku\": \"PROD-001\",\n  \"name\": \"Wireless Mouse\",\n  \"base_price\": 25.99,\n  \"description\": \"Ergonomic wireless mouse\",\n  \"variants\": [\n    {\n      \"sku\": \"MOUSE-RED\",\n      \"title\": \"Red\",\n      \"price\": 27.99,\n      \"stock\": 50,\n      \"attributes\": { \"color\": \"red\" }\n    }\n  ]\n}"
            },
            "url": "http://localhost:8000/api/v1/products"
          }
        },
        {
          "name": "Update Product",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Wireless Mouse\",\n  \"base_price\": 29.99\n}"
            },
            "url": "http://localhost:8000/api/v1/products/1"
          }
        },
        {
          "name": "Delete Product",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:8000/api/v1/products/1"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order (Customer)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"variant_id\": 1,\n      \"quantity\": 2\n    }\n  ]\n}"
            },
            "url": "http://localhost:8000/api/v1/orders"
          }
        },
        {
          "name": "List Orders (User)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:8000/api/v1/orders"
          }
        },
        {
          "name": "Get Order Details",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:8000/api/v1/orders/1"
          }
        },
        {
          "name": "Confirm Order (Admin/Vendor)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:8000/api/v1/orders/1/confirm"
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:8000/api/v1/orders/1/cancel"
          }
        },
        {
          "name": "Download Invoice",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:8000/api/v1/orders/1/invoice"
          }
        }
      ]
    },
    {
      "name": "Product Import",
      "item": [
        {
          "name": "Upload CSV (Vendor)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "/path/to/products.csv"
                }
              ]
            },
            "url": "http://localhost:8000/api/v1/products/import"
          }
        },
        {
          "name": "Check Import Status",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "http://localhost:8000/api/v1/products/import/1"
          }
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": "Paste your JWT access_token here after login"
    }
  ]
}