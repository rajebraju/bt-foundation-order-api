{
  "info": {
    "name": "BT Foundation Order API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login (Admin)",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@email.com\",\n  \"password\": \"password\"\n}",
              "options": { "raw": { "language": "json" } }
            },
            "url": "http://localhost:8000/api/v1/auth/login"
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": "http://localhost:8000/api/v1/products"
          }
        },
        {
          "name": "Search Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8000/api/v1/products/search?q=laptop",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "v1", "products", "search"],
              "query": [{ "key": "q", "value": "laptop" }]
            }
          }
        },
        {
          "name": "Create Product (Auth Required)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sku\": \"PROD-001\",\n  \"name\": \"Test Product\",\n  \"base_price\": 100,\n  \"variants\": [\n    {\n      \"sku\": \"VAR-001\",\n      \"title\": \"Red\",\n      \"price\": 110,\n      \"stock\": 10\n    }\n  ]\n}"
            },
            "url": "http://localhost:8000/api/v1/products"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Create Order (Auth Required)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"items\": [\n    {\n      \"variant_id\": 1,\n      \"quantity\": 2\n    }\n  ]\n}"
            },
            "url": "http://localhost:8000/api/v1/orders"
          }
        },
        {
          "name": "Confirm Order",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "http://localhost:8000/api/v1/orders/1/confirm"
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "http://localhost:8000/api/v1/orders/1/cancel"
          }
        },
        {
          "name": "Download Invoice",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "http://localhost:8000/api/v1/orders/1/invoice"
          }
        }
      ]
    },
    {
      "name": "Product Import",
      "item": [
        {
          "name": "Upload CSV (Auth Required)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "formdata",
              "formdata": [{ "key": "file", "type": "file", "src": "/path/to/products.csv" }]
            },
            "url": "http://localhost:8000/api/v1/products/import"
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "token", "value": "your_jwt_token_here" }
  ]
}